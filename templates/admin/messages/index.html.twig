{% extends 'adminbase.html.twig' %}

{% block title %}Messages index{% endblock %}

{% block body %}
    <h1>Messages index</h1>
    <a class="btn btn-danger " href="{{ path('messages_index',{'filter': 'all'}) }}"> tüm mesajlar</a>
    <a class="btn btn-success " href="{{ path('messages_index',{'filter': 'new'}) }}"> yeni mesajlar</a>
    <a class="btn btn-secondary " href="{{ path('messages_index',{'filter': 'answered'}) }}">yanıtlanan mesajlar</a>
    <a class="btn btn-warning " href="{{ path('messages_index',{'filter': 'read'}) }}">okunan mesajlar</a>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Status</th>
                <th>Ip</th>
                <th>Note</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.name }}</td>
                <td>{{ message.subject }}</td>
                <td>{{ message.message }}</td>
                <td>{{ message.status }}</td>
                <td>{{ message.ip }}</td>
                <td>{{ message.note }}</td>
                <td>{{ message.email }}</td>
                <td>
                    <a href="{{ path('messages_show', {'id': message.id}) }}">show</a>
                    <a href="{{ path('messages_edit', {'id': message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{#    <a href="{{ path('messages_new') }}">Create new</a>#}
{% endblock %}
