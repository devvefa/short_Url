{% extends 'base.html.twig' %}

{% block title %}{% endblock %}


{% block header %}
    {% include 'home/inc/header.html.twig' %}
{% endblock %}

{% block body %}
    <div class="homepage">

        <section class="banner">
            <div class="container">
                <div class="col w-50p">
                    <h1>Short links, big results</h1>
                    <p>A URL shortener built with powerful tools to
                        help you grow and protect your brand.
                    </p>
                    <a href="/signup" class="button button-primary">Get started for free</a>
                </div>
                <div class="col w-50p">
                    <img src="https://docrdsfx76ssb.cloudfront.net/static/1615406718/pages/wp-content/uploads/2020/05/illo-mobile-810x480-1.jpg"/>
                </div>
            </div>
        </section>



        <div class="url-form">
            <div class="container row">

                <form action="/url/create" method="post" onsubmit="return createShortUrl()">
                    <input id="urlinput" type="text" name="url" placeholder="Shorten your link" />
                    <button id="shortenButton" class="button button-primary" type="submit">Shorten</button>
                </form>

                <div class="url-form-terms">
                    By clicking SHORTEN, you are agreeing to Path Shortener’s
                    <a href="/terms">Terms of Service</a> and <a href="/privacy">Privacy Policy</a>
                </div>

                <div class="flash-messages">
                    <div class="form-error"></div>
                    <div class="form-success"></div>
                </div>

            </div>
        </div>


        <section class="features">
            <div class="container row">
                <h3 class="features-title">The link shortener that has your brand’s back</h3>
                <p class="features-description">
                    Your brand wasn’t built to be hidden. Help it stand out with branded
                    links that drive 34% more clicks.
                </p>

                <div class="feature-rows">
                    {% for item in  features %}


                        <div class="feature">
                            <img src="{{ asset('asset') }}/images/{{ item.image }}" />
                            <h3>{{ item.feature }}</h3>
                            <p>
                                {{item.description}}
                            </p>
                        </div>
                    {% endfor %}


                </div>

            </div>
        </section>


        <section class="happy-customers">
            <div class="container">

            </div>
        </section>

    </div>
{% endblock %}


{% block footer %}
    {% include 'home/inc/footer.html.twig' %}
{% endblock %}
