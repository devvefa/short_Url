{% extends 'emptybase.html.twig' %}

{% block title %}{% endblock %}


{% block header %}
    {% include 'home/inc/header.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="col">

            {{ include('flashmessage.html.twig') }}
            <div class="card">
                <div class="card-header bg-primary text-white"><i class="fa fa-envelope"></i> Bize ulaşın                </div>

                <div class="card-body">
                    <form name="contact" method="post">
                        <div class="form-group">
                            <label for="name">İsim</label>
                            <input type="text" class="form-control" id="name" aria-describedby="emailHelp"
                                   placeholder="Lütfen bir isim giriniz " name="name"  value="{{ app.user.name }}" required>
                        </div>
                        <div class="form-group">
                            <label for="subject">Konu</label>
                            <input type="text" class="form-control" id="subject" aria-describedby="emailHelp"
                                   placeholder="Lütfen bir mail addresi giriniz "  name="subject" required>
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" value="{{ app.user.email }}" id="email" aria-describedby="emailHelp"
                                   placeholder="Lütfen bir mail addresi giriniz " name="email"
                                   required>
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea class="form-control" id="message" rows="6"
                                      name="message" required></textarea>
                        </div>
                        <div class="mx-auto">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token('csrf_message') }}"/>

                            <button type="submit" class="btn btn-primary text-right">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-4">
            <div class="card bg-light mb-3">
                <div class="card-header bg-success text-white  "><i class="fa fa-home"></i> Adresimiz</div>
                <div class="card-body">
                    <p>Bay Plaza İçerenköy</p>
                    <p>Ataşehir / İstanbul</p>
                    <p>Türkiye</p>
                    <p>Email : email@example.com</p>
                    <p>Tel. +90 212 00000000</p>

                </div>

            </div>
        </div>
    </div>
{% endblock %}


{% block footer %}
    {% include 'home/inc/footer.html.twig' %}
{% endblock %}
